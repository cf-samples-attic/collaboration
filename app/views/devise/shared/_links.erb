<%- content_for :footer do %>
    <h2>Cloud Foundry App Gallery</h2>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => 'ui-btn-right' %>
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class => 'ui-btn-right' %>
    <% end -%>

<% end -%>