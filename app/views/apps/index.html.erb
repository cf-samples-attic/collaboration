<h1>Listing apps</h1>

<table>
  <tr>
    <th>Display name</th>
    <th>Framework</th>
    <th>Runtime</th>
    <th>State</th>
    <th></th>
    <th></th>
  </tr>

<% @apps.each do |app| %>
  <tr>
    <td><%= link_to app.display_name, app %></td>
    <td><%= app.framework %></td>
    <td><%= app.runtime %></td>
    <td><%= app.state %></td>
    <td><%= link_to 'Edit', edit_app_path(app) %></td>
    <td><%= link_to 'Destroy', app, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

