<%- content_for :header do %>
  <%= link_to 'Back', apps_path, :class => "ui-btn-left" %>
  <h1>Editing app</h1>
  <%= link_to 'Destroy App', app_path(@app), :confirm => 'Are you sure?', 'data-role'=>"button", 'data-inline'=>"true", :method => :delete, 'data-icon'=>"delete"%>
<%- end %>

<%= render 'form' %>

  <%- if @app.state == "STOPPED" %>
  <%= link_to 'Start', app_path(@app), 'data-role'=>"button", 'data-inline'=>"true" %>
  <%- else %>
  <%= link_to 'Stop', app_path(@app), 'data-role'=>"button", 'data-inline'=>"true" %>
  <%- end %>


