<h1>Listing organizations</h1>

<table>
  <tr>
    <th>Display name</th>
    <th>Avatar</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @orgs.each do |org| %>
  <tr>
    <td><%= link_to org.display_name, org %></td>
    <td><%= org.avatar %></td>
    <td><%= org.description %></td>
    <td><%= link_to 'Edit', edit_org_path(org) %></td>
    <td><%= link_to 'Destroy', org, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

