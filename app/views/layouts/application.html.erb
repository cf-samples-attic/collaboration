<!DOCTYPE html>
<html>
<head>
  <title>Cloud Foundry Identity Services</title>
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.0b3/jquery.mobile-1.0b3.min.css"/>
  <%= stylesheet_link_tag :all %>
  <script src="http://code.jquery.com/jquery-1.6.2.min.js"></script>
  <script src="http://code.jquery.com/mobile/1.0b3/jquery.mobile-1.0b3.min.js"></script>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body data-role="page">
<%- if current_user %>
<div data-role="header" data-theme="b">
      <div data-role="navbar">
            <ul>
              <li><%= link_to 'Home', home_index_path, "data-icon" => "home" %></li>
              <li><%= link_to("Organizations", orgs_path, "data-icon" => "group" )%></li>
              <li><%= link_to("Users", users_path, "data-icon" => "user" ) %> </li>
              <li><%= link_to("Apps", apps_path, "data-icon" => "gear" ) %></li>
              <li><%= link_to("Services", services_path, "data-icon" => "service" ) %></li>
            </ul>
        </div><!-- /navbar -->
    </div>
   <% end %>
<div data-role="header" data-theme="b">
  <%= yield :header %>
</div>
<%= yield %>
<%- if notice %>
    <div data-role="content" class="notice">
      <strong id="notice"><%= notice %></strong>
      <strong id="alert"><%= alert %></strong>
    </div>
<%- end %>
<div data-role="footer" class="ui-bar" data-theme="b">
  <%- if current_user %>
      <%= link_to "Logout #{current_user.display_name}", "/users/sign_out", 'rel'=>"external", :class => 'ui-btn-right' %>
  <%-end%>
  <%= yield :footer %>
</div>
<div>
</div>
</body>
</html>
