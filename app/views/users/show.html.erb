<%- content_for :header do %>
<%= link_to 'Back', users_path, :class => 'ui-btn-left' %>
<h1><%= @user.display_name %></h1>
<%= link_to 'Edit', edit_user_path(@user),:class => 'ui-btn-right' %>
<%- end %>

<div data-role="content">
  <img src='<%= @user.avatar.url %>' style='width:100px' />
  <h3><%= @user.display_name %></h3>
    <ul data-role="listview">
        <li><label>First name</label>: <%= @user.first_name %></li>
        <li><label>Last name</label>: <%= @user.last_name %></li>
        <li><label>Username</label>: <%= @user.username %></li>
      <li><label>Emails</label>:

        <%- @user.email_addresses.each do |email_record| %>
         <span class='email'><%= link_to email_record.email, "mailto:#{email_record.email}", 'rel' => 'external' %></span>
        <%-end %>

        </li>
     </ul>
</div>