<%- content_for :header do %>
  <%= link_to 'Home', home_index_path, :class => 'ui-btn-left', "data-icon" => "home" %>
  <h1>Listing users</h1>
<%- end %>

<div data-role="content">
<ul data-role="listview" data-inset="true">
<% @users.each do |user| %>
  <li><a href='<%=user_path(user)%>'><img src='<%= user.avatar.url %>'/><h3><%= user.display_name  %></h3></a> </li>
<% end %>
</ul>
</div>



